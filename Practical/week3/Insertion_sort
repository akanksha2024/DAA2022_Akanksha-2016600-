#include<iostream>
using namespace std;
void sorting(int *arr,int n)
{
    int i,j,key,count=0;
    for(i=0;i<n;i++)
    { key=arr[i];
    j=i-1;
    while(j>=0 &&arr[j]>key)
    {
        arr[j+1]=arr[j];
        j=j-1;
        count++;
    }
    arr[j+1]=key;

    }
    cout<<"The Sorted Array is "<<endl;
    for(i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";

    }
    cout<<endl;
    cout<<"The no. of compare"<<endl;
    cout<<count;


}
int main()
{
    int arr[100],n,i;
    cout<<"Enter the size of Array"<<endl;
    cin>>n;
    for(i=0;i<n;i++)
    {
        cin>>arr[i];

    }
    sorting(arr,n);
    return 0;

}
