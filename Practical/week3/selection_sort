#include<iostream>
using namespace std;
void sorting(int *arr,int n)
{
    int i,j,m,count=0,temp;
    for(i=0;i<n;i++)
    { m=i;
    for(j=i+1;j<n;j++)
    {
        if(arr[j]<arr[m])
           {m=j;
            temp=arr[m];
            arr[m]=arr[i];
            arr[i]=temp;
            count++;

           }

    }


    }
    cout<<"The Sorted Array is "<<endl;
    for(i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";

    }
    cout<<endl;
    cout<<"The no. of compare"<<endl;
    cout<<count;


}
int main()
{
    int arr[100],n,i;
    cout<<"Enter the size of Array"<<endl;
    cin>>n;
    for(i=0;i<n;i++)
    {
        cin>>arr[i];

    }
    sorting(arr,n);
    return 0;

}
